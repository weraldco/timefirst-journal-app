// Prisma schema for Supabase PostgreSQL
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  journals Journal[] // reverse relation for Journal
}

model Journal {
  id String @id @default(uuid())
  title String
  content String
  mood String
  tags String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId String
  user User   @relation(fields: [userId], references: [id])
  @@map("journals")
}